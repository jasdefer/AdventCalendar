@page
@model AdventCalendarWebApp.Pages.IndexModel
@{ 
    ViewData["Title"] = "Advent Calendar 2021";
}
<div class="row">
    <div class="col-12">
        <p>The Wikipedia Advent calendar, pick the current day!</p>
    </div>
    @if (Model.Days.Length < 1)
    {
<div class="col-12 p-3">
    <div class="alert alert-primary">The Advent calendar has not started yet.</div>
</div>
    }
    else
    {
        @for (int i = 0; i < Model.Days.Length; i++)
        {
            var day = Model.Days[i];
            <div class="col-3 d-grid gap-2 mt-2">
                @if (day % 2 == 0)
                {
                    <a asp-page="2021/WikiPagePicker" asp-route-day="@day" class="btn btn-outline-secondary">Door @day</a>
                }
                else
                {
                    <a asp-page="2021/WikiArticleGuesser" asp-route-day="@day" class="btn btn-outline-secondary">Door @day</a>
                }
            </div>
        }
    }
    <p class="mt-5">You can also take a look at last years <a asp-page="/2020/Index">Advent calendar</a>.</p>
</div>