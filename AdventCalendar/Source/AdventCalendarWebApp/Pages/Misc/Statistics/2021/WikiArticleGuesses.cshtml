@page
@model AdventCalendarWebApp.Pages.Misc.Statistics._2021.WikiArticleGuessesModel
@{
    ViewData["Title"] = $"Wiki article guessing day {Model.Day}";
}
<p>
    See the statistics for the Wiki article guessing game.
</p>
<div class="list-group">
    <div class="list-group-item">
        Average solve duration: @Model.AverageSolveDuration
    </div>
    <div class="list-group-item">
        Number of correct solutions: @Model.NumberOfCorrectSolutions
    </div>
</div>
<table class="table table-striped table-hover mt-4">
    <thead>
        <tr>
            <th>Guess</th>
            <th>Number of guesses</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urlRequest in Model.Guesses)
        {
            <tr>
                <td>@urlRequest.Guess</td>
                <td>@urlRequest.NumberOfGuesses</td>
            </tr>

        }
    </tbody>
</table>
<div class="row mt-4">
    @for (int i = 1; i <= 24; i += 2)
    {
        <div class="col-4 d-grid mt-2">
            <a class="btn btn-outline-secondary" asp-page="WikiArticleGuesses" asp-route-day="@i">Day @i</a>
        </div>
    }
</div>