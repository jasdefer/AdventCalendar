@page
@model AdventCalendarWebApp.Pages.Misc.Statistics._2021.WikiPagePicksModel
@{
    ViewData["Title"] = $"Wiki article picking day {Model.Day}";
}
<p>
    See the statistics for the Wiki article picking game.
</p>
<div class="list-group">
    <div class="list-group-item">
        Average solve duration: @Model.AverageSolveDuration
    </div>
    <div class="list-group-item">
        Number of correct solutions: @Model.NumberOfCorrectSolutions
    </div>
</div>
<table class="table table-striped table-hover mt-4">
    <thead>
        <tr>
            <th>Pick</th>
            <th>Number of attempts</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urlRequest in Model.Picks)
        {
        <tr>
            <td>@urlRequest.Pick</td>
            <td>@urlRequest.NumberOfAttempts</td>
        </tr>

        }
    </tbody>
</table>
<div class="row mt-4">
    @for (int i = 2; i <= 24; i += 2)
    {
        <div class="col-4 d-grid mt-2">
            <a class="btn btn-outline-secondary" asp-page="WikiPagePicks" asp-route-day="@i">Day @i</a>
        </div>
    }
</div>